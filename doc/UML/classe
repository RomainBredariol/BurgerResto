https://www.planttext.com/

@startuml

title Diagramme de classe

abstract class Entitee {
  -String nom
  -int pv
  -int pvMax
  -int or
  -boolean estVivant
  +getPV() : int
  +getOr() : int
  +getNom() : String
  +estVivant() : boolean
  +{abstract} attaquer(Entitee entitee)
  +subirDegats(int degats)
  +soigner()
}
class Joueur {
  -HashMap<String, Integer> emplacement
  -Arme arme
  -Armure armure
  -HashMap<String, Objet> sac
  +Carte lvl1
  +Carte lvl2
  +Carte lvl3
  +ajouterObjetSac(Objet obj)
  +supprimerObjetSac(Objet obj)
  +carteSuivante()
}
class Monstre {
  -Objet tresor
  -int force
  +attaquer(Entitee entitee)
}

Class Combat {
  -int tour
  -Joueur joueur
  -Monstre monstre
  -boolean estTermine
  +continuer()
  +fuir()
}

Joueur "1"--down-"1" Combat : participe
Monstre "1"--down-"0,n" Combat : participe

Entitee <|-down- Joueur : Hérite
Entitee <|-down- Monstre : Hérite

abstract class Objet {
  -String nom
  -int valeur
}

class Armure {
  -int defense
  -int defenseMax
  -boolean estCassee
  +subirDegats(int degats)
  +reparer()
}
class Arme {
  -int degats
}
Joueur "0,n"--down-"1" Objet : transporte
Monstre "1"--down-"1" Objet : garde
Objet <|-down- Arme : Hérite
Objet <|-down- Armure : Hérite

class Carte {
  -Salle[] salles
  -lvl1() : Salle[]
  -lvl2() : Salle[]
  -lvl3() : Salle[]
}
class Salle {
  -enumDescription typeSalle
  -String texte
  -int indexMap
  -boolean estDejaVistee
}

Carte "n" *-down- "1,n" Salle: Composition
Salle"0,1"--left-"1" Joueur : contient
Salle"0,n"--right-"1" Monstre : contient

class Boutique {
  -List<Objet> marchandise
  +acheter(Objet objet)
  +vendre(Objet objet)
  +reparer(Armure armure)
}

class Arene{
    - Monstre monstre
}

Salle <|-down- Arene : Hérite
Salle <|-down- Boutique : Hérite

class BDJoueur{
    -Map<String, Joueur> listeJoueur
    +getInstance() : BDJoueur
    +ajouterJoueur(Joueur newJoueur)
    +isJoueur(String nomJoueur)
}


@enduml
